<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>

<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8">
            <h1><%=title%></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control" id="nameRextField" placeholder="Enter the Business Contact Name" name="name" value="<%= businessContact.name %>" required/>
                </div>
                <div class="form-group">
                    <label for="numberTextField">Number</label>
                    <input type="text" class="form-control" id="numberTextField" placeholder="Enter the phone number" name="number"  value="<%= businessContact.number %>" required/>
                </div>
                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control" id="emailTextField" placeholder="Enter the email" name="email" value="<%= businessContact.email %>" required/>
                </div>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                <a href="/business-contacts" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>    
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') -%>