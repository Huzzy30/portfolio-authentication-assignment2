<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>

 <!-- main content -->
 <main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-9">
            <div>
                <a href="/business-contacts/add" class="btn btn-success pull-right" role="button">
                    <i class="fas fa-plus-circle"></i> Add New Contact</a>
            </div>
            <table class="table table-bordered table-striped table-hover table-dark">
                <!--Header Row-->
                <tr class="d-flex">
                        <th class="text-center col-3">Contact Name</th>
                        <th class="text-center col-3">Contact Number</th>
                        <th class="text-center col-5">Email Address</th>
                        <th class="text-center col-1">Edit</th>
                        <th class="text-center col-1">Delete</th>
                </tr>  
                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < ContactList.length; count++) { %>
                    <tr class="d-flex">
                        <td class="text-center col-3"><%= ContactList[count].name %></td>
                        <td class="text-center col-3"><%= ContactList[count].number %></td>
                        <td class="text-center col-5"><%= ContactList[count].email %></td>
                        <td class="text-center col-1">
                            <a href="/business-contacts/update/<%= ContactList[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i> Edit</a>
                        </td>
                        <td class="text-center col-1">
                            <a href="/business-contacts/update/<%= ContactList[count]._id %>" class="btn btn-danger btn-sm delete-button">
                            <i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                    </tr>
                <% } %>
                
            </table>
        </div>
     </div>
    </main>

<%- include('../partials/footer') -%>